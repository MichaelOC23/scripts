{
  "configurations": [
    {
      "name": "THIS:Python",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "THIS:Flask",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "justMyCode": true,
      "env": {
        "FLASK_APP": "${file}",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1"
      },
      "args": ["run", "--port", "4001"],
      "jinja": true
    },
    {
      "name": "THIS:Streamlit",
      "type": "debugpy",
      "request": "launch",
      "module": "streamlit",
      "args": ["run", "${file}"],
      "justMyCode": true,
      "console": "integratedTerminal"
    },

    {
      "name": "THIS:Quart",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "env": {
        "QUART_APP": "quart-app",
        "QUART_ENV": "development",
        "API_KEY": "${env:DEEPGRAM_API_KEY}",
        "LOG_FOLDER": "logs"
      },
      "args": ["run", "--host", "0.0.0.0", "--port", "5000"],
      "justMyCode": true
    }
  ]
}
